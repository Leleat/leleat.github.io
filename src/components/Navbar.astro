<style>
    a {
        color: var(--color-text-dim);
        text-decoration: none;
        font-size: 0.9rem;
    }

    li {
        list-style-type: none;
    }

    header {
        border-block-end: 1px solid var(--color-text-dark);
        position: relative;
    }

    .hamburger-button {
        color: var(--color-text-dim);
        display: flex;
        align-items: center;
        justify-content: end;
        cursor: pointer;
        padding: 1.125rem;
        gap: 0.75rem;
        block-size: var(--navbar-height);
        font-weight: 800;
        user-select: none;
        -webkit-user-select: none;
        margin-inline-start: auto;

        &:hover {
            transform: translateY(-3px);
            color: var(--color-yellow);

            & .hamburger-line {
                background-color: var(--color-yellow);
            }
        }

        &:focus-visible {
            outline: none;

            & .menu-icon {
                outline: 2px solid var(--color-rose);
                outline-offset: 2px;
            }
        }
    }

    .navbar {
        display: none;
    }

    #navbar-popover {
        position: absolute;
        inset: unset;
        width: unset;
        top: var(--navbar-height);
        left: 1rem;
        right: 1rem;
        margin: 0;
        border-radius: 0.75rem;
        border: none;
        box-shadow: 0 0 1rem oklch(from var(--color-rose) l c h);
        background-color: var(--color-background);

        ul {
            display: flex;
            flex-direction: column;
            padding-inline: 1.5rem;

            li {
                padding-block: 1.5rem;
                margin: 0;
                border-block-end: 1px solid var(--color-text-dark);
            }

            li a {
                color: var(--color-yellow);
                display: block;
                text-align: center;
                font-size: 1rem;

                &:hover {
                    text-decoration: 1px dotted underline;
                }
            }
        }
    }

    .menu-icon {
        display: flex;
        flex-direction: column;
        cursor: pointer;
        gap: 5px;
        justify-content: center;

        & .hamburger-line {
            inline-size: 1.5rem;
            block-size: 3px;
            background-color: var(--color-text-dim);
            border-radius: calc(infinity * 1px);
        }
    }

    @media (min-width: 40rem) {
        .hamburger-button {
            display: none;
        }

        #navbar-popover {
            display: none;
        }

        .navbar {
            --item-spacing: 2.25rem;
            --navbar-button-padding: 0.75rem;

            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 0 auto;
            position: relative;
            text-align: right;
            gap: 2.25rem;
            font-weight: 600;
            min-block-size: var(--navbar-height);
            user-select: none;
            -webkit-user-select: none;

            & .left-box {
                display: flex;
                gap: var(--item-spacing);
                padding: 0;
                margin: 0;

                & a {
                    position: relative;
                    padding: var(--navbar-button-padding);

                    &::after {
                        --underline-extension: 20%;

                        content: "";
                        inline-size: calc(100% + var(--underline-extension));
                        block-size: 0;
                        position: absolute;
                        bottom: 15%;
                        left: calc(-1 * var(--underline-extension) / 2);
                        z-index: -1;
                        background-color: var(--color-yellow);
                    }
                }

                & a:hover {
                    color: var(--color-text-dark);

                    &::after {
                        block-size: 70%;
                    }
                }
            }

            & .right-box {
                display: flex;
                gap: var(--item-spacing);
                margin: 0;
                padding: 0;
                margin-inline-end: var(--content-hpadding);

                & li {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

                & a {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    padding: 0.25rem;

                    &:hover svg {
                        transform: translateY(-3px);
                        fill: var(--color-yellow);
                    }
                }
            }
        }
    }

    @media (min-width: 80rem) {
        .navbar {
            max-inline-size: var(--max-inline-size);
        }
    }

    @media (prefers-reduced-motion: no-preference) {
        .hamburger-button {
            transition: transform 0.15s;

            & .hamburger-line {
                transition: background-color 0.15s;
            }
        }

        .navbar .left-box a::after {
            transition: height 0.15s;
        }

        .navbar .right-box a svg {
            transition: transform 0.15s;
        }
    }
</style>
