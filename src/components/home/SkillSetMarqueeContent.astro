---
import "../../global.js";

const { class: className, ...rest } = Astro.props;
---

<div class={`marquee-content ${className}`} {...rest}>
    <div class="marquee-item">
        <span class="marquee-item-title">Progamming Languages</span>
        <ul class="marquee-item-body">
            <li>JavaScript</li>
            <li>TypeScript</li>
            <li>GNOME JavaScript</li>
            <li>Rust (Foundation)</li>
            <li>Python (Foundation)</li>
            <li>PHP (Foundation)</li>
        </ul>
    </div>
    <div class="marquee-item">
        <span class="marquee-item-title">Web Technologies</span>
        <ul class="marquee-item-body">
            <li>HTML, CSS</li>
            <li>React, Vue, Astro, Tailwind</li>
            <li>Node.js, Deno</li>
        </ul>
    </div>
    <div class="marquee-item">
        <span class="marquee-item-title">Databases</span>
        <ul class="marquee-item-body">
            <li>SQLite</li>
        </ul>
    </div>
    <div class="marquee-item">
        <span class="marquee-item-title">Version Control System</span>
        <ul class="marquee-item-body">
            <li>Git</li>
            <li>Jujutsu</li>
        </ul>
    </div>
    <div class="marquee-item">
        <span class="marquee-item-title">Misc</span>
        <ul class="marquee-item-body">
            <li>Linux</li>
            <li>Bash</li>
        </ul>
    </div>
</div>

<style>
    .marquee-content {
        --marquee-item-inline-padding: 1.5rem;
        --marquee-item-block-padding: 1rem;

        display: flex;
        flex-shrink: 0;
        justify-content: space-between;
        min-inline-size: 100%;
        align-items: center;
    }

    .marquee-item {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        flex-grow: 1;
        block-size: 100%;
    }

    .marquee-item-title {
        font-weight: 800;
        border-block: 1px dashed rgba(255 255 255 / 0.3);
        background-color: #171717;
        padding-block: var(--marquee-item-block-padding);
        padding-inline: var(--marquee-item-inline-padding);
    }

    .marquee-item-body {
        margin: 0;
        padding: 0;
        padding-inline: var(--marquee-item-inline-padding);
    }
</style>
